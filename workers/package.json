{
  "name": "social-archiver-api",
  "version": "1.0.0",
  "description": "Cloudflare Workers API for Social Archiver Obsidian plugin",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev src/index.ts --local",
    "build": "tsc --noEmit",
    "deploy": "wrangler deploy",
    "test": "vitest",
    "test:ci": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "tail": "wrangler tail",
    "kv:create": "npm run kv:create:archive && npm run kv:create:license && npm run kv:create:share",
    "kv:create:archive": "wrangler kv:namespace create ARCHIVE_CACHE",
    "kv:create:license": "wrangler kv:namespace create LICENSE_KEYS",
    "kv:create:share": "wrangler kv:namespace create SHARE_LINKS"
  },
  "keywords": [
    "cloudflare-workers",
    "api",
    "social-media",
    "archiver"
  ],
  "author": "Hyungyun Lim",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240815.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "miniflare": "^3.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "wrangler": "^4.0.0"
  },
  "dependencies": {
    "@types/marked": "^5.0.2",
    "hono": "^3.12.0",
    "marked": "^16.4.1",
    "zod": "^3.22.0"
  }
}
