{
  "name": "social-archiver-share-web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "dev:local": "npm run env:dev && npm run dev",
    "dev:prod": "npm run env:prod && npm run dev",
    "build": "vite build",
    "preview": "vite preview",
    "build:deploy": "node scripts/deploy.mjs",
    "deploy": "node scripts/deploy.mjs",
    "deploy:force": "node scripts/deploy.mjs --force",
    "deploy:test": "node scripts/deploy.mjs --force --test",
    "deploy:worker": "node scripts/deploy.mjs --worker",
    "deploy:pages": "node scripts/deploy.mjs --pages",
    "deploy:quick": "npm run build && npx wrangler pages deploy .svelte-kit/cloudflare --project-name=obsidian-social-archiver --commit-dirty=true",
    "deploy:sh": "./deploy.sh",
    "env:dev": "node ../scripts/set-share-web-env.mjs dev",
    "env:prod": "node ../scripts/set-share-web-env.mjs prod",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@sveltejs/adapter-cloudflare": "^4.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/svelte": "^5.2.8",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.10.0",
    "@vitest/ui": "^1.6.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "jsdom": "^27.0.1",
    "lighthouse": "^13.0.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "rollup-plugin-visualizer": "^6.0.5",
    "svelte": "^5.0.0",
    "svelte-check": "^3.6.2",
    "tailwindcss": "^3.4.0",
    "terser": "^5.44.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "dompurify": "^3.3.0",
    "marked": "^11.2.0"
  }
}
