{
  "name": "obsidian-social-archiver",
  "version": "1.0.0",
  "description": "Save social media posts directly into your Obsidian vault",
  "main": "main.js",
  "type": "module",
  "author": {
    "name": "Hyungyun Lim"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite build --watch",
    "dev:deploy": "vite build && node scripts/deploy-to-vault.mjs",
    "build": "vite build",
    "build:deploy": "npm run build && node scripts/deploy-to-vault.mjs",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx,.svelte",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.19.0",
    "eslint": "^8.0.0",
    "eslint-plugin-svelte": "^2.0.0",
    "jsdom": "^27.0.1",
    "obsidian": "latest",
    "postcss": "^8.5.6",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^3.4.18",
    "tslib": "^2.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "p-queue": "^7.4.1",
    "zod": "^3.22.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hyungyunlim/obsidian-social-archiver"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "social-media",
    "archiver",
    "facebook",
    "linkedin",
    "instagram",
    "tiktok",
    "threads",
    "twitter"
  ]
}
